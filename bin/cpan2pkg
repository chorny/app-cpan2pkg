use strict;
use warnings;

# for testing purposes
use FindBin qw{ $Bin };
use lib "$Bin/../lib";

#use Getopt::Euclid;
use App::CPAN2Pkg::Curses;
use Hook::Output::File;

my $hook;
$hook = Hook::Output::File->redirect(
    stdout => '/tmp/cpan2pkg.stdout',
    stderr => '/tmp/cpan2pkg.stderr',
);

my $ui = App::CPAN2Pkg::Curses->spawn;
$ui->mainloop;

exit;

__END__
